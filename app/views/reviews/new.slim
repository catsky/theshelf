section.default-page.book-page
  h1.mega = t('reviews.new.title')

  .book-cover
    .book-image
      = image_tag @book.cover
  .book-info
    .milli = @book.title
    .nano = @book.subtitle
    p.small = @book.authors

  .new-section
    h2.milli = t('reviews.new.rating_title')
    = render 'books/my_rating', book: @book

  .new-section
    h2.milli = t('reviews.new.comment_title')
    = form_tag review_book_path, method: 'post', class: 'review-form'
      fieldset
        label.hide-visually :review_body
        .text = text_area :review, :body, placeholder: t('forms.reviews.comment')
      .form-actions
        = link_to t('reviews.new.skip_review'), book_path(@book), class: 'btn-negative'
        = submit_tag t('forms.reviews.submit'), class: 'btn-positive'
